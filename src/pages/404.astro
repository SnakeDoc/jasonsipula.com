---
import Layout from "@layouts/Layout.astro";
---

<meta name="robots" content="noindex" />

<Layout title="Page not found - Jason Sipula">
  <section class="mx-auto max-w-3xl px-8 pt-16 pb-24">
    <h1
      class="text-ink mb-6 font-serif text-6xl leading-tight font-normal tracking-tight"
    >
      Nothing here.
    </h1>
    <p class="text-slate mb-10 max-w-xl text-lg">
      This page doesn't exist. You're welcome to head back to the homepage.
    </p>
    <a
      href="/"
      class="bg-ink border-ink hover:bg-ink-soft hover:border-ink-soft inline-flex items-center gap-2 rounded border px-6 py-3 text-sm font-normal tracking-wide text-white no-underline transition-all duration-300"
    >
      Back to home
    </a>
  </section>
</Layout>
