---
import Footer from "@components/Footer.astro";
import Nav from "@components/Nav.astro";
import SkipLink from "@components/SkipLink.astro";
import "@styles/fonts.css";
import "@styles/global.css";
const { title = "Jason Sipula - Technology Executive & Advisor", description } =
  Astro.props;
const canonical = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en" prefix="og: https://ogp.me/ns#">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content={`${Astro.site}card.png`} />
    <meta name="theme-color" content="#f4f6f8" />
  </head>
  <body
    class="bg-paper selection:bg-accent text-ink flex min-h-screen flex-col font-sans leading-relaxed font-light antialiased"
  >
    <SkipLink />
    <Nav />
    <main id="main" class="flex-1 pt-24">
      <slot />
    </main>
    <Footer />
  </body>
</html>
