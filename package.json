{
  "name": "jasonsipula-com",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "clean": "rm -rf dist .astro",
    "nuke": "rm -rf node_modules dist .astro",
    "check": "astro check --minimumFailingSeverity warning",
    "build": "run-s check build:astro",
    "build:astro": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "run-s lint:*",
    "lint:script": "eslint --fix .",
    "lint:css": "stylelint \"**/*.css\" --fix",
    "lint:md": "markdownlint-cli2 --fix",
    "lint:check": "run-p lint:check:*",
    "lint:check:script": "eslint .",
    "lint:check:css": "stylelint \"**/*.css\"",
    "lint:check:md": "markdownlint-cli2",
    "validate": "run-s format:check lint:check check",
    "deploy": "run-s clean validate build deploy:wrangler",
    "deploy:wrangler": "wrangler deploy",
    "deploy:wrangler:preview": "wrangler preview"
  },
  "dependencies": {
    "@astrojs/check": "0.9.6",
    "@fontsource-variable/dm-sans": "5.2.8",
    "@fontsource/instrument-serif": "5.2.8",
    "@tailwindcss/vite": "4.1.18",
    "astro": "5.17.1",
    "tailwindcss": "4.1.18",
    "typescript": "5.9.3"
  },
  "devDependencies": {
    "@dreamsicle.io/stylelint-config-tailwindcss": "1.2.2",
    "@eslint/json": "1.0.0",
    "@typescript-eslint/parser": "8.55.0",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-astro": "1.5.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "lefthook": "^2.1.1",
    "markdownlint-cli2": "0.20.0",
    "npm-run-all2": "8.0.4",
    "postcss-html": "1.8.1",
    "prettier": "3.8.1",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwindcss": "0.7.2",
    "stylelint": "17.2.0",
    "stylelint-config-alphabetical-order": "2.0.0",
    "stylelint-config-html": "1.1.0",
    "stylelint-config-standard": "40.0.0",
    "typescript-eslint": "8.55.0",
    "wrangler": "^4.65.0"
  }
}
